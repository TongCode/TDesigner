extends layout

block javascript
    script(src="lib/jquery/jquery.js")
    script(src="lib/zrender/esl/esl.js")

    script(type='text/javascript').
        require.config({
            packages: [
                {
                    name: 'zrender',
                    location: 'lib/zrender',
                    main: 'zrender'
                }
            ]
        });
        require(['zrender','zrender/shape/Circle','zrender/shape/Rectangle'],function(zrender,CircleShape,RectangleShape) {
                var zr = zrender.init(document.getElementById('Main'));
                zr.addShape(
                    new CircleShape({
                        style : {
                            x : 100,
                            y : 100,
                            r:50,
                            strokeColor : 'rgba(220, 20, 60, 0.8)'
                        },
                        draggable : true
                    })
                );

                zr.addShape(
                    new RectangleShape({
                        style:{
                            x:300,
                            y:300,
                            width:100,
                            height:100

                        },
                        draggable:true
                    })
                );


                zr.render();
        });


block content
  #Main.MainPanel
